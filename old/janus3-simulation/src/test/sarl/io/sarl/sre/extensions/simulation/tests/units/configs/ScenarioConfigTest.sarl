package io.sarl.sre.extensions.simulation.tests.units.configs

import io.sarl.sre.extensions.simulation.configs.ScenarioConfig
import io.sarl.sre.test.framework.^extension.PropertyRestoreExtension
import io.sarl.tests.api.Nullable
import io.sarl.tests.api.extensions.ContextInitExtension
import io.sarl.tests.api.extensions.JavaVersionCheckExtension
import java.util.Date
import java.util.UUID
import org.junit.jupiter.api.BeforeEach
import org.junit.jupiter.api.DisplayName
import org.junit.jupiter.api.Tag
import org.junit.jupiter.api.Test
import org.junit.jupiter.api.^extension.ExtendWith

import static extension org.junit.jupiter.api.Assertions.*

/**
 * @author $Author: sgalland$
 * @version $FullVersion$
 * @mavengroupid $GroupId$
 * @mavenartifactid $ArtifactId$
 */
@ExtendWith(#[
	typeof(ContextInitExtension),
	typeof(JavaVersionCheckExtension),
	typeof(PropertyRestoreExtension)
])
@DisplayName("unit: ScenarioConfig test")
@Tag("unit")
@Tag("janus")
@Tag("sre-unit")
@Tag("sre-simulation")
class ScenarioConfigTest {

	@Nullable
	var config : ScenarioConfig
	
	@BeforeEach
	def setUp : void {
		this.config = new ScenarioConfig
	}

	@Test
	@DisplayName("getDate")
	def getDate : void {
		this.config.date.assertNull
	}

	@Test
	@DisplayName("setDate(Date)")
	def setDate_date : void {
		this.config.date.assertNull
		val expected = new Date
		this.config.date = expected
		expected.assertSame(this.config.date)
	}

	@Test
	@DisplayName("setDate(long)")
	def setDate_long : void {
		this.config.date.assertNull
		val dt = new Date
		val expected = dt.time
		this.config.date = expected
		dt.assertEquals(this.config.date)
	}

	@Test
	@DisplayName("getName")
	def getName : void {
		this.config.name.assertNull
	}

	@Test
	@DisplayName("setName")
	def setName : void {
		this.config.name.assertNull
		val expected = UUID::randomUUID.toString
		this.config.name = expected
		expected.assertSame(this.config.name)
	}

}
