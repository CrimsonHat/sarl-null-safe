package io.sarl.sre.tests.runtime.spaces

import io.sarl.lang.core.Address
import io.sarl.lang.util.OutParameter
import io.sarl.sre.tests.runtime.spaces.mocks.SourceAgent
import io.sarl.sre.tests.runtime.spaces.mocks.SourceAgent2
import io.sarl.sre.tests.runtime.spaces.mocks.TargetAgent
import io.sarl.sre.tests.testutils.^extension.PropertyRestoreExtension
import io.sarl.sre.tests.testutils.^extension.SreRunContext
import io.sarl.sre.tests.testutils.^extension.SreRunExtension
import io.sarl.tests.api.extensions.ContextInitExtension
import io.sarl.tests.api.extensions.JavaVersionCheckExtension
import java.util.UUID
import java.util.logging.Level
import org.junit.jupiter.api.DisplayName
import org.junit.jupiter.api.Test
import org.junit.jupiter.api.^extension.ExtendWith

import static io.sarl.sre.tests.testutils.Constants.*

import static extension org.junit.jupiter.api.Assertions.assertEquals
import static extension org.junit.jupiter.api.Assertions.assertNotEquals
import static extension org.junit.jupiter.api.Assertions.assertNotNull

/**
 * @author $Author: sgalland$
 * @version $FullVersion$
 * @mavengroupid $GroupId$
 * @mavenartifactid $ArtifactId$
 */
@ExtendWith(#[
	typeof(ContextInitExtension),
	typeof(JavaVersionCheckExtension),
	typeof(PropertyRestoreExtension),
	typeof(SreRunExtension)
])
@DisplayName("run: event routing test")
class EventRoutingTest {

	@Test
	def unchangedEventSource_inspace(extension rc : SreRunContext) {
		val kern = setupTheSreKernel(typeof(TargetAgent), null, true, true)
		kern.spawn(typeof(SourceAgent), null, agentInitializationParameters)
		waitForTheKernel(STANDARD_TIMEOUT)
		
		var adr = getResult(typeof(Address), 0)
		var id = getResult(typeof(UUID), 1)
		adr.assertNotNull
		id.assertNotNull
		id.assertEquals(adr.UUID)
	}

	@Test
	def unchangedEventSources_inspace(extension rc : SreRunContext) {
		val kern = setupTheSreKernel(Level::OFF, true, false)
		val ag1 = new OutParameter<UUID>
		kern.spawn(typeof(TargetAgent), [ag1.set(it)], agentInitializationParameters)
		val ag2 = new OutParameter<UUID>
		kern.spawn(typeof(TargetAgent), [ag2.set(it)], agentInitializationParameters)
		kern.spawn(typeof(SourceAgent), null, agentInitializationParameters)
		waitForTheKernel(STANDARD_TIMEOUT)

		var adr1 = getResult(ag1.get, typeof(Address), 0)
		var id1 = getResult(ag1.get, typeof(UUID), 1)
		adr1.assertNotNull
		id1.assertNotNull
		id1.assertEquals(adr1.UUID)

		var adr2 = getResult(ag2.get, typeof(Address), 0)
		var id2 = getResult(ag2.get, typeof(UUID), 1)
		adr2.assertNotNull
		id2.assertNotNull
		id2.assertEquals(adr2.UUID)

		adr1.UUID.assertEquals(adr2.UUID)
		id1.assertEquals(id1)
	}

	@Test
	def unchangedEventSource_innercontext(extension rc : SreRunContext) {
		typeof(SourceAgent2).runSre
		
		var innerAgent = typeof(UUID).getResult(0)
		innerAgent.assertNotNull
		
		var adr = innerAgent.getResult(typeof(Address), 0)
		var id = innerAgent.getResult(typeof(UUID), 1)
		adr.assertNotNull
		id.assertNotNull
		id.assertEquals(adr.UUID)
		innerAgent.assertNotEquals(id)
		
		bootAgent.assertEquals(id)
	}

}
