package io.sarl.sre.tests.runtime.bugs.bug848.mocks

import io.sarl.core.AgentSpawned
import io.sarl.core.DefaultContextInteractions
import io.sarl.core.Lifecycle
import io.sarl.core.Schedules
import io.sarl.sre.tests.testutils.agents.TestingAgent
import java.util.UUID
import org.arakhne.afc.util.Triplet
import java.util.concurrent.atomic.AtomicBoolean

/**
 * @author $Author: sgalland$
 * @version $FullVersion$
 * @mavengroupid $GroupId$
 * @mavenartifactid $ArtifactId$
 */
agent TAgent1b extends TestingAgent {

	uses Lifecycle, Schedules, DefaultContextInteractions

	val done = new AtomicBoolean

	override runAgentTest : RunPolicy {
		in(1000) [
			new TEvent().emit
			if (this.done.getAndSet(true)) {
				killMe
			}
		]
		return RunPolicy::STANDARD
	}

	on AgentSpawned {
		var pair = new Triplet<Boolean, UUID, UUID>(
			occurrence.isFromMe, occurrence.source.UUID, occurrence.agentID)
		addResult(pair)
		if (this.done.getAndSet(true)) {
			killMe
		}
	}

}
