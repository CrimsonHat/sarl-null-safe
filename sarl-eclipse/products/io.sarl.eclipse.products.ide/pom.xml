<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>io.sarl.eclipse</groupId>
		<artifactId>sarl-eclipse-products</artifactId>
		<version>0.13.0-SNAPSHOT</version>
	</parent>

	<artifactId>io.sarl.eclipse.products.ide</artifactId>
	<packaging>eclipse-repository</packaging>
	<name>SARL IDE and P2 Site</name>

	<properties>
		<productPath.linux.64>${project.basedir}/target/products/io.sarl.eclipse.products.ide.product/linux/gtk/x86_64</productPath.linux.64>
		<productPath.win.64>${project.basedir}/target/products/io.sarl.eclipse.products.ide.product/win32/win32/x86_64</productPath.win.64>
		<productZip.macos.64>${project.basedir}/target/products/io.sarl.eclipse.products.ide.product-macosx.cocoa.x86_64.zip</productZip.macos.64>
		<productZipFolder.macos.64>Eclipse.app/Contents/MacOS</productZipFolder.macos.64>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>com.google.code.maven-replacer-plugin</groupId>
				<artifactId>replacer</artifactId>
				<version>1.5.3</version>
				<executions>
					<execution>
						<id>prepare-eclipse-product-description</id>
						<phase>process-resources</phase>
						<goals>
							<goal>replace</goal>
						</goals>
						<configuration>
							<encoding>${project.build.sourceEncoding}</encoding>
							<file>${project.basedir}/io.sarl.eclipse.products.ide.product</file>
							<regexFlags><regexFlag>MULTILINE</regexFlag></regexFlags>
							<replacements>
								<replacement>
									<token>(org\.eclipse\.jdt\.internal\.debug\.ui\.launcher\.StandardVMType\/)(.+?)(&lt;)</token>
									<value>$1${sarl-run.min.jre.environment}$3</value>
								</replacement>
							</replacements>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-p2-director-plugin</artifactId>
			</plugin>

