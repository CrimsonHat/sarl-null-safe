package io.sarl.sre.extensions.simulation.tests.units.configs

import io.sarl.sre.extensions.simulation.configs.AbstractPositionConfig
import io.sarl.sre.test.framework.^extension.PropertyRestoreExtension
import io.sarl.tests.api.Nullable
import io.sarl.tests.api.extensions.ContextInitExtension
import io.sarl.tests.api.extensions.JavaVersionCheckExtension
import org.junit.jupiter.api.BeforeEach
import org.junit.jupiter.api.DisplayName
import org.junit.jupiter.api.Tag
import org.junit.jupiter.api.Test
import org.junit.jupiter.api.^extension.ExtendWith

import static extension io.sarl.tests.api.tools.TestAssertions.*
import static extension org.junit.jupiter.api.Assertions.*

/**
 * @author $Author: sgalland$
 * @version $FullVersion$
 * @mavengroupid $GroupId$
 * @mavenartifactid $ArtifactId$
 */
@ExtendWith(#[
	typeof(ContextInitExtension),
	typeof(JavaVersionCheckExtension),
	typeof(PropertyRestoreExtension)
])
@DisplayName("unit: AbstractPositionConfig test")
@Tag("unit")
@Tag("janus")
@Tag("sre-unit")
@Tag("sre-simulation")
@SuppressWarnings("missing_abstract_modifier")
class AbstractPositionConfigConfigTest {

	@Nullable
	var config : AbstractPositionConfig
	
	@BeforeEach
	def setUp : void {
		this.config = new AbstractPositionConfig {}
	}

	@Test
	@DisplayName("getX")
	def getX : void {
		0.0.assertEpsilonEquals(this.config.x)
	}

	@Test
	@DisplayName("setX(double)")
	def setX_double : void {
		0.0.assertEquals(this.config.x)
		this.config.x = 123.456
		123.456.assertEpsilonEquals(this.config.x)		
	}

	@Test
	@DisplayName("getX")
	def getY : void {
		0.0.assertEpsilonEquals(this.config.x)
	}

	@Test
	@DisplayName("setY(double)")
	def setY_double : void {
		0.0.assertEquals(this.config.y)
		this.config.y = 123.456
		123.456.assertEpsilonEquals(this.config.y)
	}

	@Test
	@DisplayName("setPosition(x, y)")
	def setPosition {
		0.0.assertEquals(this.config.x)
		0.0.assertEquals(this.config.y)
		this.config.setPosition(123.456, 789.852)
		123.456.assertEpsilonEquals(this.config.x)
		789.852.assertEpsilonEquals(this.config.y)
	}

}
